<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tasbeh.TasbehFragment">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guidline"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_percent="0.20"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guidline2"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_percent="0.24"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guidline3"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_percent="0.46"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sebhahead"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toTopOf="@id/guidline2"
            app:layout_constraintStart_toStartOf="@id/guidline3"
            android:src="@drawable/head_sebha_logo"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sebhabody"
            app:layout_constraintTop_toBottomOf="@id/guidline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/body_sebha_logo"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sebhabody"
            android:text="@string/number_of_tasbeh"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:id="@+id/numof_tasbeh_txt"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numof_tasbeh_txt"
            android:text="0"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/rounded_borders"
            android:textStyle="bold"
            android:paddingHorizontal="9dp"
            android:id="@+id/numof_tasbeh"
            android:backgroundTint="#CAB497"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numof_tasbeh"
            android:text="@string/sobhan_allah"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/rounded_borders"
            android:textStyle="bold"
            android:paddingHorizontal="14dp"
            android:backgroundTint="@color/onWhite"
            android:layout_marginVertical="10dp"
            android:id="@+id/albaqyat_alsalhat"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>