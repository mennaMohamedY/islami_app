<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tasbehFragment"

    >
    <ImageView
        android:layout_width="250dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/sebha"
        android:layout_marginVertical="18dp"
        android:id="@+id/sebha_logo"
        android:paddingVertical="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebha_logo"
        android:text="@string/number_of_tasbeh"
        android:textSize="32sp"
        android:layout_marginTop="10dp"
        android:id="@+id/numof_tasbeh_txt"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numof_tasbeh_txt"
        android:text="0"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@drawable/rounded_borders"
        android:textStyle="bold"
        android:paddingHorizontal="9dp"
        android:id="@+id/numof_tasbeh"
        android:backgroundTint="#CAB497"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numof_tasbeh"
        android:text="@string/sobhan_allah"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@drawable/rounded_borders"
        android:textStyle="bold"
        android:paddingHorizontal="14dp"
        android:backgroundTint="@color/gold_white"
        android:layout_marginVertical="10dp"
        android:id="@+id/albaqyat_alsalhat"
        />

</androidx.constraintlayout.widget.ConstraintLayout>