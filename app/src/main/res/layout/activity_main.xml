<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity"
        android:background="@drawable/default_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:text="@string/islami"
            android:textSize="24sp"
            android:id="@+id/islami"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:id="@+id/nav_host_fragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/my_nav"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:layout_constraintTop_toBottomOf="@id/islami"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btmNavigationView"
            android:layout_marginBottom="6dp"/>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/onPrimary"
            app:itemTextColor="@color/selecteditem_navigationview"
            app:itemIconTint="@color/selecteditem_navigationview"
            app:menu="@menu/btmnavigation_menu"
            android:theme="@style/NavigationView_color"
            android:id="@+id/btmNavigationView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>