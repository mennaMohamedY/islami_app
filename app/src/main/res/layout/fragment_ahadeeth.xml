<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ahadeeth.AhadeethFragment"
        android:background="@drawable/default_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/hadeth_logo"
            android:id="@+id/hadeeth_logo"
            android:layout_marginTop="65dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/hadeeth_logo"
            android:background="@color/onWhite"
            android:id="@+id/frstView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frstView"
            android:text="ahadeeth"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:textSize="20sp"
            android:id="@+id/ahadeeth_txt"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/ahadeeth_txt"
            android:background="@color/onWhite"
            android:id="@+id/scdView"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/scdView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:foregroundGravity="center"
            android:id="@+id/ahadeeth_rv"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>